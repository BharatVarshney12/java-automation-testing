<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="AutomationTestSuite" verbose="1" parallel="methods" thread-count="3">
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="test"/>
    
    <listeners>
        <listener class-name="com.automation.framework.utils.ExtentReportManager"/>
        <listener class-name="com.automation.framework.utils.TestListener"/>
    </listeners>
    
    <!-- Smoke Test Suite -->
    <test name="SmokeTests" preserve-order="true">
        <parameter name="testType" value="smoke"/>
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.GoogleMapsTests">
                <methods>
                    <include name="testGoogleMapsPageLoad"/>
                    <include name="testMapNavigation"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Regression Test Suite -->
    <test name="RegressionTests" preserve-order="true">
        <parameter name="testType" value="regression"/>
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.GoogleMapsTests">
                <methods>
                    <include name="testLocationSearch"/>
                    <include name="testRoutePlanning"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Negative Test Suite -->
    <test name="NegativeTests" preserve-order="true">
        <parameter name="testType" value="negative"/>
        <groups>
            <run>
                <include name="negative"/>
            </run>
        </groups>
        <classes>
            <class name="com.automation.tests.GoogleMapsTests">
                <methods>
                    <include name="testInvalidLocationSearch"/>
                </methods>
            </class>
        </classes>
    </test>
    
    <!-- Full Test Suite -->
    <test name="FullTestSuite" preserve-order="false">
        <parameter name="testType" value="full"/>
        <classes>
            <class name="com.automation.tests.GoogleMapsTests"/>
        </classes>
    </test>
    
</suite>